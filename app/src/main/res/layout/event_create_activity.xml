<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.stridera.connectivitycreations.flashmob.activities.EventCreateActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
  <include
      android:id="@+id/tool_bar"
      layout="@layout/toolbar">
  </include>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">
      <!-- Picture -->
      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/photoImageView"
            android:background="@drawable/border"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
          <ImageButton
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:id="@+id/attachPhotoButton"
              android:src="@drawable/attach"
              android:scaleType="centerInside"
              android:onClick="onAttachPhoto"
              android:alpha=".4"
              android:layout_margin="20dp"/>
          <ImageButton
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:id="@+id/cameraButton"
              android:src="@drawable/camera"
              android:scaleType="centerInside"
              android:onClick="onTakePhoto"
              android:alpha=".4"
              android:layout_margin="20dp"/>
        </LinearLayout>
      </RelativeLayout>
      <!-- Title -->
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:id="@+id/nameLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_name"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="3dp"/>
        <org.droidparts.widget.ClearableEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditText"
            android:hint="@string/your_event"
            android:singleLine="true"
            android:layout_weight="1"/>
      </LinearLayout>
      <!-- Time -->
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_time"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="3dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/startTimeTextView"
            android:hint="@string/start"
            android:layout_weight="1"
            style="@android:style/Widget.EditText"
            android:onClick="onClickStartTimeTextView"
            android:focusable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="3dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/endTimeTextView"
            android:hint="@string/end"
            android:layout_weight="1"
            style="@android:style/Widget.EditText"
            android:onClick="onClickEndTimeTextView"
            android:focusable="false"/>
      </LinearLayout>
      <!-- Location -->
      <org.droidparts.widget.ClearableEditText
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:id="@+id/locationEditText"
          android:singleLine="true"
          android:hint="Enter Location"/>
      <FrameLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <View
            android:id="@+id/mapOverlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"/>
      </FrameLayout>
      <!-- Categories -->
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="top"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="3dp"/>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/categoryFrameLayout">
          <fragment
              android:name="com.stridera.connectivitycreations.flashmob.fragments.CategoryFragment"
              android:id="@+id/categoryFragment"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
        </FrameLayout>
      </LinearLayout>
      <!-- Attendees -->
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendees"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="3dp"/>
        <org.droidparts.widget.ClearableEditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/minAttendeesEditText"
            android:hint="@string/minimum"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="3dp"/>
        <org.droidparts.widget.ClearableEditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/cetLocation"
            android:hint="@string/maximum"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="1"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
