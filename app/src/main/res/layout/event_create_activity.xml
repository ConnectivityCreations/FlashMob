<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.stridera.connectivitycreations.flashmob.activities.EventCreateActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
  <include
      android:id="@+id/tool_bar"
      layout="@layout/toolbar">
  </include>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/scrollView">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:descendantFocusability="beforeDescendants"
          android:focusableInTouchMode="true">
        <!-- Picture -->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/photoImageView"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <FrameLayout
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-50dp">
          <com.melnykov.fab.FloatingActionButton
              android:id="@+id/fab"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|right"
              android:layout_margin="16dp"
              android:elevation="@dimen/fab_elevation"
              fab:fab_shadow="true"
              android:focusable="true"
              android:src="@drawable/ic_camera_white_24dp"
              style="@style/fab_style" />
        </FrameLayout>
        <!-- Title -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/nameLayout"
            android:layout_marginTop="-40dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/event_name"
              style="@style/Base.TextAppearance.AppCompat.Medium"
              android:padding="3dp"/>
          <org.droidparts.widget.ClearableEditText
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/nameEditText"
              android:hint="@string/your_event"
              android:singleLine="true"
              android:layout_weight="1" />
        </LinearLayout>
        <!-- Time -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/event_time"
              style="@style/Base.TextAppearance.AppCompat.Medium"
              android:padding="3dp"/>
          <TextView
              android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/startTimeTextView"
              android:hint="@string/start"
              android:layout_weight="1"
              style="@android:style/Widget.EditText"
              android:onClick="onClickStartTimeTextView"
              android:focusable="false"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dash"
              style="@style/Base.TextAppearance.AppCompat.Medium"
              android:padding="3dp"/>
          <TextView
              android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/endTimeTextView"
              android:hint="@string/end"
              android:layout_weight="1"
              style="@android:style/Widget.EditText"
              android:onClick="onClickEndTimeTextView"
              android:focusable="false"/>
        </LinearLayout>
        <!-- Location -->
        <org.droidparts.widget.ClearableEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationEditText"
            android:singleLine="true"
            android:hint="Enter Location"/>
        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <!-- Categories -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/categories"
              style="@style/Base.TextAppearance.AppCompat.Medium"
              android:padding="3dp"/>
          <FrameLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:id="@+id/categoryFrameLayout">
            <fragment
                android:name="com.stridera.connectivitycreations.flashmob.fragments.CategoryFragment"
                android:id="@+id/categoryFragment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
          </FrameLayout>
        </LinearLayout>
        <!-- Attendees -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/attendees"
              style="@style/Base.TextAppearance.AppCompat.Medium"
              android:padding="3dp"/>
          <org.droidparts.widget.ClearableEditText
              android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/minAttendeesEditText"
              android:hint="@string/minimum"
              android:singleLine="true"
              android:inputType="number"
              android:layout_weight="1"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dash"
              style="@style/Base.TextAppearance.AppCompat.Medium"
              android:padding="3dp"/>
          <org.droidparts.widget.ClearableEditText
              android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/cetLocation"
              android:hint="@string/maximum"
              android:singleLine="true"
              android:inputType="number"
              android:layout_weight="1"/>
        </LinearLayout>
      </LinearLayout>
      <View
          android:id="@+id/everythingOverlay"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:background="@android:color/transparent"/>
    </FrameLayout>
  </ScrollView>
</LinearLayout>
