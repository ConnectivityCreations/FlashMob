<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/relativeLayout"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivCommenterProfilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commenter's Name"
        android:id="@+id/tvCommenterName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivCommenterProfilePicture"
        android:layout_toEndOf="@+id/ivCommenterProfilePicture"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment Text"
        android:id="@+id/tvComment"
        android:layout_below="@+id/tvCommenterName"
        android:layout_toRightOf="@+id/ivCommenterProfilePicture"
        android:layout_toEndOf="@+id/ivCommenterProfilePicture"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Created Time"
        android:id="@+id/tvCommentCreatedTime"
        android:textColor="@color/primary_text_disabled_material_light"
        android:layout_alignTop="@+id/tvCommenterName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/ivMedia"
        android:layout_below="@+id/tvComment"
        android:layout_alignLeft="@+id/tvComment"
        android:layout_alignStart="@+id/tvComment"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        />
</RelativeLayout>